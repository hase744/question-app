<table class="user_info_table">
    <tr>
      <td class="user_info_name"><label>評価</label></td>
      <td>
        <span class="user_info">
        <%if user.total_reviews >= minimum_total_reviews%>
            <%= render "user/shared/star_display", model:user %>
        <%else%>
        <%end%>
        </span>
      </td>
    </tr>
    <tr> 
      <td class="user_info_name"><label>専門分野</label></td>
      <td>
        <span class="user_info one_line_text">
          <% user.categories.each do |c|%>
              <%=c.japanese_name%>
          <% end %>
        </span>
      </td>
    </tr>
    <tr>
      <td class="user_info_name"><label>最低単価</label></td>
      <td>
        <span class="user_info"><%=user.mini_price%>円</span>
      </td>
    </tr>
    <tr>
      <td class="user_info_name"><label>回答数</label></td>
      <td>
        <span class="user_info"><%=user.total_sales_numbers%>件</span>
      </td>
    </tr>
</table>