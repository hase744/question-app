$('#request_request_form_name').change(function() {
  var selectedValue = $(this).val();
  if (selectedValue === 'image') {
    $('#fileInput').attr('accept', '<%= Request.acceptable_image_extensions%>');
    console.log('<%= Request.acceptable_image_extensions%>')
    file_discription.innerHTML = "フォーマットはjpg,jpeg,pngのみです。";
    $("#image_video_field_area").show();
    $("#youtube_area").hide();
    $("#video_display").hide();
    $(".video_field_area").show();
  } else if (selectedValue === 'text') {
    $("#image_video_field_area").hide();
    $("#youtube_area").hide();
    $("#video_display").hide();
    //$("#youtube_video").hide();
    submit.disabled = false;
  } else if (selectedValue === 'video') {
    console.log('<%= Request.acceptable_video_extensions%>')
    $('#fileInput').attr('accept','video/MOV,video/mov,video/wmv,video/mp4');
    $("#image_video_field_area").show();
    $("#youtube_area").show();
    $("#youtube_id_field_area").hide();
  }
});