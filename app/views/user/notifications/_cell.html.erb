<div class="notification_cell_area closing">
    <%= link_to(user_notification_path(notification.id), class: 'notification_cell') do %>
        <div class="notification_cell_left_side">
        <% unless notification.is_read%>
            ●
        <% end %>
        </div>
        <div class="notification_cell_right_side">
            <div class="image_area">
                <%if notification.notifier_id %>
                    <%=image_tag notification.notifier.thumb_with_default, class:"image"%>
                <% else %>
                    <%=image_tag "/corretech_icon.png", class:"image"%>
                <% end %>
            </div>
            <div class="text_area">
                <span class="text three_line_text">
                    <div class="title">
                        <%= notification.title%>
                    </div>
                    <div class="description">
                    「<%= notification.description%>」
                    </div>
                </span>
                <span class="datetime">
                    <%=from_now(notification.published_at)%>
                </span>
            </div>
        </div>
    <% end %>
    <div class="detail_button_area">
        <div class="detail_button_background"></div>
        <span class="fa-solid fa-angle-down">
        </span>
    </div>
</div>