<div class="service_cell_area" id="service_cell_area">
    <div class="service_cell_flame">
        <%= link_to(user_service_path(service.id), class:"service_show_link") do%>
            <div class="service_image_area">
                <%if service.item&.file&.thumb&.url.nil?%>
                <%=image_tag "/corretech_icon.png", class:"service_image"%>
                <% else %>
                <%=image_tag service.item&.file&.thumb&.url, class:"service_image"%>
                <% end %>
            </div>
            <div class="service_description_area">
                <span class="service_description"><%=service.title%>
                </span>
            </div>
            <div class="user_info_area">
                <div class="user_image_area">
                    <%if service.user.image.thumb.url == nil%>
                        <%=image_tag "/profile.jpg", class:"user_image"%>
                    <% else %>
                        <%=image_tag service.user.image.thumb.url, class:"user_image"%>
                    <% end %>
                </div>
                <div class="user_name_area">
                    <span class="user_name"><%=service.user.name%></span>
                </div>
            </div>
            <div class="service_condition_area">
            <div class="price_area">
                <span class="star_logo fas fa-star"></span>
                <span class="star_str">
                    <%=service.average_star_rating %>
                    <%= "-- " if service.average_star_rating.nil? %>(<%=service.total_reviews %>)
                </span>
                <span class="price">&nbsp;<%=service.price%></span>円
            </div>
                <span class="name_tag">
	            <% case service.request_form.name %>
	            <% when 'text' %>
	            	<span class="text">文章で質問</span>
	            <% when 'image' %>
	            	<span class="text">文章＋画像で質問</span>
	            <% when 'free' %>
	            	<span class="text">自由形式で質問</span>
	            <% else %>
	            <% end %>
                </span>
                <span class="name_tag">
	            <% case service.delivery_form.name %>
	            <% when 'text' %>
	            	<span class="text">文章で回答</span>
	            <% when 'image' %>
	            	<span class="text">文章+画像で回答</span></span>
	            <% when 'free' %>
	            	<span class="text">自由形式で回答</span>
	            <% else %>
	            <% end %>
                </span>
                <%service.categories.each do |category|%>
                    <span class="name_tag"><%= category.japanese_name %></span>
                <% end %>
                <%if service.transaction_message_enabled%>
                    <span class="name_tag">追加で質問可能</span>
                <% end %>
                <%#= render "user/services/condition", service: service%>
            </div>
        <% end %>
    </div>
</div>