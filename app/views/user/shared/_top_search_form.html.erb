<div class="top_search_form_area">
	<%= form_with url: path, class:"top_search_form",method:"get", id:"" do |f| %>
		<% request.query_parameters.each do |key, value| %>
			<%= f.hidden_field key, value: value %>
		<% end %>
		<%= f.text_field :word, value: params[:word], class:"search_input", placeholder:"キーワード"%>
		<div class="searchForm-submit">
			<div class="search_glass"></div>
			<%= f.submit '', class:"search_button", placeholder:"" %>
		</div>
	<% end %>
</div>