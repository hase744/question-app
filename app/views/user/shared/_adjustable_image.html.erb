<div class="request_image_area container">
  <% request.items.each do |item|%>
    <%= image_tag item.file.url, class:"request_image", id:"request_image", onclick:"revealImage()"%>
  <% end %>
  <div class="button_area">
    <button class="btn dli-chevron-down dli-chevron" id='btn' ></button>
  </div>
</div>
<script>
function revealImage() {
  $('.request_image_area').toggleClass('reveal');
  //$('.request_image_area button').text('全体を表示');
  //$('.reveal button').text('一部だけ表示');
  $('.btn').toggleClass('dli-chevron-up');
  $('.btn').toggleClass('dli-chevron-down');
}
</script>
<style>
.container {
  height: 50%;
}
.request_image {
  display: block;
  width: 100%;
  height: auto;
  height: 100px;
  object-fit: cover;
  cursor: pointer;
}
.request_image_area > img {
  opacity: 0.5;
}
.reveal > img {
  height: 100%;
  opacity: 1.0;
}
.button_area {
  position: relative;
}
.btn {
  position: absolute;
  z-index: 1;
  top: -50px;
  left: 50%;
  color: grey;
  border: none;
  cursor: pointer;
  background-color: transparent;
  pointer-events: none;
}
.dli-chevron-up {
  transform: translateX(50%) translateY(100%) rotate(-45deg);
}
.dli-chevron{
  display: inline-block;
  vertical-align: middle;
  //color: #333;
  line-height: 1;
  width: 1em;
  height: 1.2em;
  border: 0.3em solid currentColor;
  border-left: 0;
  border-bottom: 0;
  box-sizing: border-box;
}
.dli-chevron-down {
  transform: translateX(50%) translateY(100%) rotate(135deg);
}
</style>