$(".change_text").click(function() {
    var parent = $(this).closest(".description_area");
    var description_text_area = parent.find(".description_text_area");
    var description_text = parent.find(".description_text");

    $(this).toggleClass("open_text");
    $(this).toggleClass("close_text");
    description_text.toggleClass("opening_text");
    description_text.toggleClass("closing_text");
});