open_transaction_cells = function(cell_area){
    var description_text = cell_area.find(".description_text");
    var request_title = cell_area.find(".request_title");

    description_text.toggleClass("three_line_text");
    request_title.toggleClass("one_line_text");


    cell_area.toggleClass("opening");
    cell_area.toggleClass("closing");
}
//$(document)がないと新しく増えたtransaction_cell_areaに適応されないため
addEventListener("load", (event) => {
    $(document).on("click", ".open_text", function() {
        var cell_area = $(this).closest(".transaction_cell_area");
        open_transaction_cells(cell_area);
    });
    }
);