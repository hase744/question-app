<!-- form.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <title>住所入力フォーム</title>
  <style>
    /* CSS スタイルを追加 */
    .form-container {
      width: 400px;
      margin: 0 auto;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-label {
      display: block;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .form-input {
      width: 100%;
      padding: 5px;
      font-size: 16px;
    }

    .form-button {
      display: block;
      width: 100%;
      padding: 10px;
      background-color: #4CAF50;
      color: white;
      text-align: center;
      font-size: 16px;
      border: none;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h2>住所入力フォーム</h2>
    <%= form_with("/process_form",model: current_user, method: "post") do %>
      <div class="form-group">
        <%= label_tag(:last_name, "姓") %>
        <%= text_field_tag(:last_name, nil, class: "form-input") %>
      </div>
      <div class="form-group">
        <%= label_tag(:first_name, "名") %>
        <%= text_field_tag(:first_name, nil, class: "form-input") %>
      </div>
      <div class="form-group">
        <%= label_tag(:prefecture, "都道府県") %>
        <%= text_field_tag(:prefecture, nil, class: "form-input") %>
      </div>
      <div class="form-group">
        <%= label_tag(:city, "市区町村") %>
        <%= text_field_tag(:city, nil, class: "form-input") %>
      </div>
      <div class="form-group">
        <%= label_tag(:district, "町域") %>
        <%= text_field_tag(:district, nil, class: "form-input") %>
      </div>
      <div class="form-group">
        <%= label_tag(:address, "丁目・番地・号") %>
        <%= text_field_tag(:address, nil, class: "form-input") %>
      </div>
      <div class="form-group">
        <%= label_tag(:apartment, "マンション・アパート名") %>
        <%= text_field_tag(:apartment, nil, class: "form-input") %>
      </div>
      <%= submit_tag("送信", class: "form-button") %>
    <% end %>
  </div>
</body>
</html>