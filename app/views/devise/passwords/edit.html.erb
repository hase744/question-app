
<div class="common_register_area">
  <div class="common_register_flame">
    <div class="form_container">
    <h2>パスワードを変更</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
    
      <div class="form_group">
        <%= f.label :password, "新しいパスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form_input" %>
      </div>
    
      <div class="form_group">
        <%= f.label :password_confirmation, "新しいパスワードを再入力" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form_input" %>
      </div>
    
      <div class="actions">
        <%= f.submit "パスワードを変更", class:"submit-btn" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>